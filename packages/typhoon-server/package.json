{
  "name": "typhoon-server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "./dist/**"
  ],
  "sideEffects": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "module": "./dist/*/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "format": "prettier -c .",
    "format:apply": "prettier -w .",
    "lint": "oxlint .",
    "typecheck": "tsgo --noEmit",
    "build": "tsdown -c tsdown.config.ts"
  },
  "keywords": [],
  "author": "",
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "crossws": "^0.4.1",
    "drizzle-orm": "^0.44.0",
    "ufo": "^1.6.1"
  },
  "peerDependencies": {
    "effect": "^3.18.4",
    "typhoon-core": "workspace:*"
  },
  "devDependencies": {
    "@typescript/native-preview": "latest",
    "glob": "^11.0.1",
    "oxlint": "^1.16.0",
    "pathe": "^2.0.3",
    "prettier": "^3.5.3",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3"
  }
}
